<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">




    <info.hoang8f.widget.FButton
        android:id="@+id/f_twitter_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:drawableLeft="@drawable/twitter"
        android:drawablePadding="5dp"
        android:minHeight="80dp"
        android:minWidth="250dp"
        android:paddingLeft="30dp"
        android:layout_gravity="center"
        android:paddingRight="20dp"
        android:paddingTop="-5dp"
        android:text="Twitter"
        android:textColor="@android:color/white"
        app:shadowHeight="10dp"
      />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:id="@+id/edit_shadow"
        android:inputType="number"
        android:hint="gölge yüksekliği"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:id="@+id/editcornerRadius"
        android:inputType="number"
        android:hint="Köşe Kırpma miktarı"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Tamam"
        android:id="@+id/btn_tamam"
        android:onClick="btn_tamam"
        />
</LinearLayout>
